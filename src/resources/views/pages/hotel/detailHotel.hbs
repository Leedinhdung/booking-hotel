<script>
  document.querySelectorAll('.bg-gray-100').forEach(room => { const minusBtn =
  room.querySelector('button:first-child'); const plusBtn =
  room.querySelector('button:last-child'); const quantity =
  room.querySelector('span:nth-child(2)'); minusBtn.addEventListener('click', ()
  => { let count = parseInt(quantity.textContent); if (count > 0) {
  quantity.textContent = count - 1; updateTotal(); } });
  plusBtn.addEventListener('click', () => { let count =
  parseInt(quantity.textContent); quantity.textContent = count + 1;
  updateTotal(); }); }); function updateTotal() { let total = 0;
  document.querySelectorAll('.bg-gray-100').forEach(room => { const price =
  parseInt(room.querySelector('.text-teal-700').textContent.replace(/[^0-9]/g,
  '')); const quantity =
  parseInt(room.querySelector('span:nth-child(2)').textContent); total += price
  * quantity; });
  document.querySelector('.font-semibold.text-teal-700').textContent =
  `${total.toLocaleString()} đ`; }
</script>
<script>
  const stars = document.querySelectorAll('.text-yellow-500 span');
  stars.forEach(star => { star.addEventListener('click', () => { const rating =
  Array.from(stars).indexOf(star) + 1; stars.forEach((s, index) => {
  s.textContent = index < rating ? '★' : '☆'; }); }); });
</script>